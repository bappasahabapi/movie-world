{
  "compilerOptions": {
    // "target": "ES2020",
    // "module": "ES2020",
    "module": "CommonJS",
  "target": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
     "types": ["node", "jest"]
  },
  "include": [
    "src/**/*",
    "tests/**/*",                        
    "**/*.test.ts",
    "global.d.ts"  
  ]
}
